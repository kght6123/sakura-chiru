{
  "name": "桜散る",
  "version": "1.0",
  "description": "全てのサイトに桜の花びらを散らすことが出来ます。リモートお花見などにどうぞ！",
  "permissions": [
    "declarativeContent",
    "storage",
    "tabs",
    "background",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "options_page": "option.html",
  "manifest_version": 2
}
